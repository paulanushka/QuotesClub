<%- include('../partials/header'); %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to The YelpCamp</h1>
            <p>Add and delete , Update campgrounds of your choice!! Have fun!!</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add new campground</a>
            </p>
        </div>
    </header>
    <div class="container">
        <h1 class="font-weight-light text-center text-lg-left mt-4 mb-0">See some of our campgrounds.</h1>
        <hr class="mt-2 mb-5" style="display: flex; flex-wrap: wrap;">
        <div class="row text-center" style="display: flex; flex-wrap: wrap;">
            <% campgrounds.forEach(function(campground){ %>
            <div class="col-lg-4 col-md-6 col-12">
                <img class="img-fluid img-thumbnail" src="<%= campground.image %>" alt="">
                <h4><%= campground.name %></h4>
                <p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                </p>
                    
            </div>
        
            <% }); %> 
        </div>
         
      </div>  
       
</div>

<%- include('../partials/footer'); %>
